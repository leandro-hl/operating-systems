    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm test",
            "name": "Run npm test",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Node: Nodemon + TS",
            "processId": "${command:PickProcess}",
            "restart": true,
            "protocol": "inspector",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "${workspaceFolder}",
            "sourceMaps": true
        }
    ]
}